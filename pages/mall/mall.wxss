/* pages/passage/passage.wxss */

.pl {
  width: 100%;
  text-align: center;
}

.line {
  height: 1px;
  margin: 0 auto;
  background-color: #545454;
  opacity: 0.3;
  width: 60%;
}

.image-content {
  margin: 50rpx 40rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  
}

text {
  color: black;
}

.item {
  width: 300rpx;
  margin: 0 0 20rpx 0;
  
}

image {
  width: 100%;
  height: 450rpx;
}

.scroll {
  width: 100%;
  height: 90rpx;
  white-space: nowrap;
}

.item-scroll {
  
  

  height: 60rpx;
  background: transparent;
  margin:5rpx auto;
  
  
  color: black;
  display: inline-block;
  text-align: center;
}
.item-scroll text{
  color: black;
  margin: auto; 
  vertical-align: middle;
font-size:35rpx
}
.selected {
  color:#44c0c0;
  border-bottom: 8rpx solid #44c0c0;
   z-index: 10
}
.selected text{color:#44c0c0;}

.price {
  font-weight: 600;
  font-size: 30rpx;
  color: #941a3e;
}

.price text {
  font-weight: 600;
  font-size: 30rpx;
  color: #941a3e;
}

.cart_image {
  width: 110rpx;
  height: 90rpx;
  position: fixed;
  z-index: 5;
  bottom: 50rpx;
  right: 50rpx;
}

.cart_icon {
  width: 90rpx;
  height: 90rpx;
}

.cart_total_num {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  font-size: 22rpx;
  font-family: Fantasy;
  color: white;
  line-height: 36rpx;
  background-color: red;
  border-radius: 36rpx;
  text-align: center;
  position: absolute;
  right: 2rpx;
}
