}
.orderprice{
  display: flex;
  margin-top: 30rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  padding-bottom: 15rpx;
  justify-content: space-between;
}
.money{
  font-size: 40rpx;
  margin-top: 5rpx;
  font-size: 33rpx;
  padding-top:5px;
}
