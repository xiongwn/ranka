.orderItem{
  display: flex;
  flex-direction: column;
}
.space{
  border-bottom: 25rpx solid gainsboro;
}
.ordertitle{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  
}
.ordernum{
  margin-left: 10rpx;
  font-size: 25rpx;
}

.orderinfo{
  display: flex;
  border-bottom: 2rpx solid gainsboro;
  border-top: 2rpx solid gainsboro;
  padding-bottom: 15rpx;

}
.img {
  width: 200rpx;
  height: 140rpx;
  margin-left: 25rpx;
  margin-top: 30rpx;
}
.goods_title {
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
